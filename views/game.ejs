<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge">-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%=title%></title>

    <!-- bower:css --
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.css" />
    <!-- endbower -->
    <!-- bower:js --
    <script src="/jquery/dist/jquery.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- endbower -->

    <!-- inject:css -->
    <link rel="stylesheet" href="/css/fonts.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/libs/bootstrap/css/bootstrap.min.css">
    <!-- endinject -->
    <style>
    .result-card {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 100;
        }
    .store {

        }
    </style>

</head>

<body>

<!-- Navigation -->

<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav">
                <% for (var i = 0; i < nav.length; i++){ %>
                <li class="nav-item"><a class="nav-link" href="<%= nav[i].Link %>"><%= nav[i].Text %></a></li>
                <% } %>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Page Content -->
<div class="container">
    <div class="row my-4">
        <div class="col text-center">
            <h1 style="display: inline-block; margin: 0 auto">One Piece Secret Treasure!</h1>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-4">
            <button class="btn btn-dark btn--restart" type="button" data-toggle="collapse" data-target="#instruction" aria-expanded="false" aria-controls="instruction">Instruction</button>
        </div>
        <div class="col-4">
            <button class="btn btn-danger btn--start-game">Start New Game</button>
        </div>
        <div class="col-4">
            <a class="btn btn-success btn--result disabled" role="button" href="#store"  >Purchase</a>
        </div>
    </div>
    <div class="row mt-2" id="instruction">
        <div class="card card-body">Open 10 random lockers below. Each locker can contain either a bounty or a cry face.</div>
    </div>
    <div class="row my-2 text-center border-top border-bottom panel--display-money">
        <h3>Your money:  <span class="txt--total-money"></span> Berries </h3>
    </div>
    <div class="row">
        <%for (i=1; i<=24; i++) {%>
        <div class="col-md-2 col-sm-4 my-2">

            <div class="card game-card ">
                <img class="card-img" src="/img/game/wooden-texture.jpg" />
                <div class="card-img-overlay">
                    <button class="btn btn-outline-warning btn-lg w-100 h-100 btn--locker <%=i%>">Locker <%=i%></button>
                </div>

            </div>

        </div>
        <%}%>
    </div>
    <!-- /.row -->
    <div class="row mt-5 py-4 store" id="store">
        <h1 class="w-50 mx-auto text-center">STORE</h1>
    </div>
    <div class="row mb-2 text-center border-top border-bottom panel--display-money">
        <h3>Your money:  <span class="txt--total-money"></span> Berries </h3>
    </div>
    <div class="row border border-danger py-3">
        <div class="col-md-4 col-sm-12">
            <div class="card w-50 mx-auto">
                <img class="card-img-top" src="/img/index/book.jpg"/>
                <div class="card-body">
                    <button type="button" class="btn btn-primary mx-auto btn--purchase book" >$100,000,000 Berries</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="card w-50 mx-auto">
                <img class="card-img-top" src="/img/index/music.jpg"/>
                <div class="card-body">
                    <button type="button" class="btn btn-primary mx-auto btn--purchase music" >$200,000,000 Berries</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="card w-50 mx-auto">
                <img class="card-img-top" src="/img/index/movie.png"/>
                <div class="card-body">
                    <button type="button" class="btn btn-primary mx-auto btn--purchase movie" >$300,000,000 Berries</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>
    </div>
    <!-- /.container -->
</footer>



<!-- inject:js -->
<script src="/libs/jquery/jquery.js"></script>
<script src="/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- endinject -->
<script src="/js/game/game.js" type="text/javascript"></script>
<script src="/libs/jquery.formatCurrency-1.4.0.min.js"></script>
</body>

</html>
